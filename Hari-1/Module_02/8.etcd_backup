#...On node master

- check etcd cluster
kubectl -n kube-system exec -it etcd-master-first -- sh -c "ETCDCTL_API=3 \
ETCDCTL_CACERT=/etc/kubernetes/pki/etcd/ca.crt ETCDCTL_CERT=/etc/kubernetes/pki/etcd/server.crt \
ETCDCTL_KEY=/etc/kubernetes/pki/etcd/server.key etcdctl -w table --endpoints 172.23.0.132:2379,172.23.0.133:2379 \
endpoint status "

kubectl -n kube-system exec -it etcd-master-first -- sh -c "ETCDCTL_API=3 \
ETCDCTL_CACERT=/etc/kubernetes/pki/etcd/ca.crt ETCDCTL_CERT=/etc/kubernetes/pki/etcd/server.crt \
ETCDCTL_KEY=/etc/kubernetes/pki/etcd/server.key etcdctl -w table --endpoints 172.23.0.132:2379,172.23.0.133:2379 \
endpoint health "

kubectl -n kube-system exec -it etcd-master-first -- sh -c "ETCDCTL_API=3 \
ETCDCTL_CACERT=/etc/kubernetes/pki/etcd/ca.crt ETCDCTL_CERT=/etc/kubernetes/pki/etcd/server.crt \
ETCDCTL_KEY=/etc/kubernetes/pki/etcd/server.key etcdctl -w table --endpoints 172.23.0.132:2379,172.23.0.133:2379 \
member list "

- backup & restore
kubectl -n kube-system exec -it etcd-master-first -- sh -c "ETCDCTL_API=3 \
ETCDCTL_CACERT=/etc/kubernetes/pki/etcd/ca.crt ETCDCTL_CERT=/etc/kubernetes/pki/etcd/server.crt \
ETCDCTL_KEY=/etc/kubernetes/pki/etcd/server.key etcdctl --endpoints 172.23.0.132:2379 \
snapshot save /var/lib/etcd/snapshot.db "

kubectl -n kube-system exec -it etcd-master-first -- sh -c "ETCDCTL_API=3 \
ETCDCTL_CACERT=/etc/kubernetes/pki/etcd/ca.crt ETCDCTL_CERT=/etc/kubernetes/pki/etcd/server.crt \
ETCDCTL_KEY=/etc/kubernetes/pki/etcd/server.key etcdctl --endpoints 172.23.0.132:2379 \
snapshot restore /var/lib/etcd/snapshot.db "

